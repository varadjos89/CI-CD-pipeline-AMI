{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "subnet_id": "",
        "source_ami": "ami-9887c6e7",
        "ssh_username": "centos"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_description": "CentOS AMI for CSYE 6225 - Fall 2019",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 8,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "FOO=foo"
            ],
            "inline": [
                "sudo yum clean all",
                "sudo yum update -y",
                "sudo yum install -y httpd",
                "sudo systemctl start httpd",
                "sudo systemctl enable httpd",
                "sudo yum install wget",
                "wget http://www-eu.apache.org/dist/tomcat/tomcat-9/v9.0.27/bin/apache-tomcat-9.0.27.tar.gz",
                "sudo tar -zxpvf apache-tomcat-9.0.27.tar.gz -C /opt/",
                "cd /opt/",
                "sudo mv apache-tomcat-9.0.27 tomcat",
                "echo 'export CATALINA_HOME='/opt/tomcat/' >> ~/.bashrc'",
                "source ~/.bashrc",
                "sudo yum update",
                "sudo yum install ruby -y",
                "sudo yum install wget -y",
                "cd /home/centos",
                "wget https://aws-codedeploy-us-east-1.s3.us-east-1.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto",
                "sudo service codedeploy-agent start",
                "sudo service codedeploy-agent status"
            ]
        }
    ]
}
